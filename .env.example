# =============================================================================
# PERPETUAL AI - ENVIRONMENT VARIABLES
# Copy this to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
APP_NAME="Perpetual AI"
VERSION="2.0.0"
DEBUG=false

API_HOST="0.0.0.0"
API_PORT=8000
API_PREFIX="/v1"

# -----------------------------------------------------------------------------
# Model Configuration
# -----------------------------------------------------------------------------
MODEL_NAME="mistralai/Mistral-7B-Instruct-v0.2"
MODEL_QUANTIZATION="gptq"
GPU_MEMORY_UTILIZATION=0.85
MAX_MODEL_LEN=4096

# -----------------------------------------------------------------------------
# Qdrant Vector Database
# -----------------------------------------------------------------------------
# For Qdrant Cloud:
QDRANT_CLOUD_URL="https://your-cluster.cloud.qdrant.io"
QDRANT_API_KEY="your-qdrant-api-key"

# For local Qdrant (leave URL and API_KEY empty):
# QDRANT_CLOUD_URL=""
# QDRANT_API_KEY=""

QDRANT_COLLECTION="conversations"

# -----------------------------------------------------------------------------
# Supabase Authentication
# -----------------------------------------------------------------------------
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_KEY="your-supabase-anon-key"
SUPABASE_JWT_SECRET="your-jwt-secret"

# -----------------------------------------------------------------------------
# Polar.sh Billing
# -----------------------------------------------------------------------------
POLAR_API_KEY="your-polar-api-key"
POLAR_ORGANIZATION_ID="your-org-id"

# -----------------------------------------------------------------------------
# Rate Limiting (defaults per tier)
# -----------------------------------------------------------------------------
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_DAY=10000

# -----------------------------------------------------------------------------
# Retrieval Settings
# -----------------------------------------------------------------------------
RETRIEVAL_TOP_K=5
CONTEXT_MAX_TOKENS=4096
